<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      layout="2columns-right" xsi:noNamespaceSchemaLocation=
          "urn:magento:framework:View/Layout/etc/page_configuration.xsd">
<!--    <head>-->
<!--        <title>Magenest Movie</title>-->
<!--    </head>-->
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Magenest Movie</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="catalog.compare.sidebar" remove="true"/>
        <referenceBlock name="wishlist_sidebar" remove="true"/>
        <referenceBlock name="navigation.sections" remove="true"/>
        <referenceContainer name="content">
            <block class="Magenest\Movie\Block\Movie\ShowInfoMovie" name="show.info.movie" template="Magenest_Movie::showinfomovie.phtml"/>
        </referenceContainer>
    </body>
</page>
